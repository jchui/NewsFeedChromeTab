{
  "manifest_version": 2,
  "name": "Athena New Tab Extension",
  "short_name": "Athena",
  "description": "A new tab window with a dynamic background and an integrated newsfeed for University of Sheffield medical students.",
  
  "author": "Jeremy Chui",
  "version": "0.3",
  "permissions": [
    "http://api.jchui.me/minerva/"
  ],
  "background": {
    "scripts": ["js/vendor/angular.min.js"]
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "chrome_url_overrides" : {
    "newtab": "tab.html"
  },
  "icons": { "16": "img/16.png",
           "48": "img/48.png",
          "128": "img/128.png" }
}